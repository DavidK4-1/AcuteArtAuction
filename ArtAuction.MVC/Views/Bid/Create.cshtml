@model ArtAuction.Models.BidVM.BidCreate
@{
    ViewData["Title"] = "Place Bid";
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error</strong> @TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="@Model.Payment" class="form-label"></label>
        <input type="number" asp-for="@Model.Payment" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Address" class="form-label"></label>
        <input asp-for="@Model.Address" class="form-control" />
    </div>
    <div class="col d-flex justify-content-between align-items-baseline">
        <a asp-controller="Artwork" asp-action="Index">Back to Artwork</a>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>